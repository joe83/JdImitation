<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/item_setting_container_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:maxLines="1"
            android:paddingRight="14dp"
            android:paddingTop="8dp"
            android:text="小体积大用处，使用卫浴收纳推荐"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_setting_container_image1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ay1"/>

            <ImageView
                android:id="@+id/item_setting_container_image2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ay1"/>

            <ImageView
                android:id="@+id/item_setting_container_image3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ay1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/am6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品质省活"
                android:textSize="10sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_margin="3dp"
                android:background="@drawable/aaw"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="329人浏览"
                android:textSize="10sp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>