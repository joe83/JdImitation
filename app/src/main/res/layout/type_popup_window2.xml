<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="长袖"/>

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="短袖"/>

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="背心"/>

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="抹胸"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="长裙"/>

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="短裙"/>

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="长裤"/>

        <Button
            style="@style/TypePopWindowBtnStyle"
            android:text="短裤"/>
    </LinearLayout>

</LinearLayout>