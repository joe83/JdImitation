<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_signOrReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/b0z">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/a92"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_setting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_message"
                android:background="@mipmap/a95"/>

            <ImageView

                android:id="@+id/iv_signOrReg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/b0q"
                />



            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="11dp"
                android:layout_marginTop="30dp"
                android:drawableRight="@mipmap/aqx"
                android:text="登录/注册"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_alignTop="@+id/iv_signOrReg"
                android:layout_toRightOf="@+id/iv_signOrReg"
                android:layout_toEndOf="@+id/iv_signOrReg"
                android:layout_marginStart="11dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_signOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/b0x">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_message_sign"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/a92"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_setting_sign"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_message_sign"
                android:background="@mipmap/a95"/>

            <ImageView

                android:id="@+id/iv_signOk"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/b0p"
                />

            <LinearLayout
                android:layout_marginTop="10dp"


                android:layout_toRightOf="@+id/iv_signOk"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/tv_username"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="30dp"

                    android:text="用户名"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"

                    android:layout_marginStart="11dp"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableRight="@mipmap/aqx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="铜牌会员"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:drawableRight="@mipmap/aqx"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小白信用81.6"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:drawableTop="@mipmap/akf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:text="代付款"/>

            <TextView
                android:textColor="@android:color/black"

                android:textSize="10sp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:drawableTop="@mipmap/akf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="待收货"/>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="10sp"

                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:drawableTop="@mipmap/akf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="待评价"/>

            <TextView
                android:textColor="@android:color/black"

                android:textSize="10sp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:drawableTop="@mipmap/akf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退换/售后"/>

            <TextView
                android:textColor="@android:color/black"

                android:textSize="10sp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:drawableTop="@mipmap/akf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的订单"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="@android:color/black"

                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京东"/>
            </LinearLayout>


            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="@android:color/black"

                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"/>
            </LinearLayout>

            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="@android:color/black"

                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白条"/>
            </LinearLayout>

            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="@android:color/black"

                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京东E卡"/>
            </LinearLayout>

            <TextView
                android:textColor="@android:color/black"

                android:textSize="10sp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:drawableTop="@mipmap/akf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的钱包"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/akf"
                android:gravity="center"
                android:padding="12dp"
                android:text="商品关注"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/akf"
                android:gravity="center"
                android:padding="12dp"
                android:text="店铺关注"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>



            <TextView

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/akf"
                android:gravity="center"
                android:padding="12dp"
                android:text="内容关注"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/akf"
                android:gravity="center"
                android:padding="12dp"
                android:text="浏览记录"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/akf"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"

                    android:gravity="center"
                    android:text="我的活动"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="预约/拍卖等"
                    android:textSize="8sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/akf"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:gravity="center"

                    android:text="社区"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="有料有福利"
                    android:textSize="8sp"/>
            </LinearLayout>


            <TextView

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/akf"
                android:gravity="center"
                android:padding="12dp"
                android:text="客户服务"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>

            <TextView

                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>